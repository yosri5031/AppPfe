{% extends 'base.html.twig' %}
{% block body %}
<!-- inclusion du fichier css dans ma page twig -->
<style>{% include 'css/admin.css' %}</style>
<div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image">
        
        </div>


        <!-- The content half -->
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">

                <!-- second half content-->
                
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h3 class="display-4">Espace Login!</h3>
                            <p class="text-muted mb-4">accée exclusive avec identificateur et mot de passe
                                pour <b>les étudiants</b> ou <b>les enseignants</b> </p>

                            <!-- sign up succes message -->
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            <!-- End sign up succes messafe -->

                            <form action="{{ path('app_login') }}" method="POST">
                            
                            {% if error %}
                              <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %} -
                              
                             {% if app.user %}
                                     <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                      </div>
                                    {% endif %} 
                                <div class="form-group mb-3">
                                    <input id="inputEmail" type="login" placeholder="login" name="username" value="{{ last_username }}" class="form-control rounded-pill border-0 shadow-sm px-4">
                                </div>
                                <div class="form-group mb-3">
                                    <input id="inputPassword" type="password" placeholder="Password" name="password" class="form-control rounded-pill border-0 shadow-sm px-4 text-primary">
                                </div>
                                <!--<div class="custom-control custom-checkbox mb-3">
                                    <input id="customCheck1" type="checkbox" checked class="custom-control-input">
                                    <label for="customCheck1" class="custom-control-label">Remember password</label>
                                </div> -->
                                
                                <button type="submit" class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm">Sign in</button>
                                <div id="redirect_login"> <h6 style="color:green;">tu es un étudiant et vous n'avez pas inscris?<a href="{{ path('app_register') }}">inscrire ici</a></h6></div>
                                <div class="text-center d-flex justify-content-between mt-4"><p>Snippet by <a href="https://bootstrapious.com/snippets" class="font-italic text-muted"> 
                                        <u>Boostrapious</u></a></p></div>

                            </form>
                        </div>
                    </div>
                </div><!-- End -->

            </div>
        </div><!-- End -->

    </div>
</div>


{% endblock %}
{% block title %} login {% endblock %}