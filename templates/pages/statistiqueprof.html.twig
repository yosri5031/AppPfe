{% extends 'base.html.twig' %}
{% block head %}
<!-- import font awesome v4 icons -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


{% endblock %}
{% block body %}
<!-- inclusion du fichier css dans ma page twig -->
<style>{% include 'css/qcm.css' %}</style>
<style>

        .rating {
                display: block;
                direction: rtl;
                unicode-bidi: bidi-override;
                text-align: center;
        }
        .rating .star {
                display: none;
        }
        .rating label {
                color: lightgray;
                display: inline-block;
                font-size: 22pt;
                margin: 0 -2px;
                transition: transform .15s ease;
        }
        .rating label:hover {
                transform: scale(1.35, 1.35);
        }
        .rating label:hover,
        .rating label:hover ~ label {
                color: orange;
        }
        .rating .star:checked ~ label {
                color: orange;
        }
        .progress{
                margin-left:15%;
                margin-right:15%;
        }
</style>

<!-- source des questions : 
https://www.reptic.qc.ca/wp-content/uploads/2014/05/2014-05_STFO_questionnaire-evaluation-formative.pdf -->
        <div class="qcm-body" onload="window.print()">
                <form method="post" action="">
                        {% for key, val in questions %}
{#                                        {% for nb in nombre_reponses %}#}
                                <h2> {{ key }} </h2>
                                {% for qcm in val %}
                                        <p style="font-size:16px">  {{ qcm.titre }} : </p>
                                        {% for k,v in result %}
                                                {% if k == qcm.id %}
                                                        <div class="rating">
{#                                                                nombre de réponses est : {{nombre_reponses }}#}
                                                                <label>  taux de satisfaction  </label>
                                                                <div class="progress">

                                                                        <div class="progress-bar" role="progressbar" style="width: {{100-v*20}}%; text-align:left;background-color:rgba(18,17,105,0.6);color:#f9a307;font-family: 'Arial Black'" aria-valuenow="{{v*20}}" aria-valuemin="0" aria-valuemax="100" >{{v*20}}%</div>
                                                                </div>
                                                                <label for="{{ qcm.id }}">  nombre de réponses : {{nombre_reponses }}</label>

                                                        </div>
                                                {% endif %}
                                        {% endfor %}
{#                                {% endfor %}#}
            {% endfor %}
    {% endfor %}
<input type="button" value="imprimer" onclick="window.print();" />
</form>
</div>
